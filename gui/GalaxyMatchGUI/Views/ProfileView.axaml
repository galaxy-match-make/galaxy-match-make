<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GalaxyMatchGUI.ViewModels"
        xmlns:conv="using:GalaxyMatchGUI.Converters"
        xmlns:controls="using:GalaxyMatchGUI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="using:GalaxyMatchGUI.Models"
        mc:Ignorable="d"
        d:DesignWidth="600" d:DesignHeight="800" x:Class="GalaxyMatchGUI.Views.ProfileView"
        x:CompileBindings="False"
        Background="#191437"> <UserControl.Resources>
        <conv:InterestSelectedConverter x:Key="InterestSelectedConverter"/>
    </UserControl.Resources>

    <Design.DataContext>
        <vm:ProfileViewModel/>
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
            <Setter Property="Background" Value="#A052DE"/> </Style>
        <Style Selector="ComboBox">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#30195B"/> </Style>
        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#30195B"/> <Setter Property="Foreground" Value="#E6E6FA"/> </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#30195B"/> <Setter Property="Foreground" Value="#E6E6FA"/> </Style>
    </UserControl.Styles>

    <Border Padding="30" Margin="20" MaxWidth="540" HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#1E1449" CornerRadius="20"> <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="#000000" Opacity="0.4"/>
        </Border.Effect>
            
        <!-- Header -->
        <StackPanel Spacing="20"> <Border CornerRadius="15" Background="#281A5E" Padding="20,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Color="#000000" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding IsEditMode, Converter={x:Static conv:BoolConverters.ToString}, ConverterParameter='Edit|Create'}"
                               Foreground="#E6E6FA"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Your Cosmic Profile"
                               Foreground="#00FA9A"
                               FontSize="30" FontWeight="Bold"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <BlurEffect Radius="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Share your story with the galaxy"
                               Foreground="#B0E0E6"
                               FontSize="13" FontStyle="Italic"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <ProgressBar IsVisible="{Binding IsLoading}"
                         IsIndeterminate="True"
                         Height="6"
                         Margin="40,0" />

            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="#FF69B4"
                       IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>

            <Grid ColumnDefinitions="Auto,*"  IsVisible="{Binding !IsLoading}">
                <Border Grid.Column="0"
                        Width="120" Height="120" CornerRadius="60" Background="#30195B"
                        Margin="15,0,20,0" ClipToBounds="True">
                    <Panel>
                        <Image Source="avares://GalaxyMatchGUI/Assets/alien_profile.png"
                              Width="100" Height="100"
                              IsVisible="{Binding AvatarUrl, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>

                        <controls:AsyncImage Source="{Binding AvatarUrl}"
                                  IsVisible="{Binding AvatarUrl, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Stretch="UniformToFill"/>
                    </Panel>
                </Border>

                <StackPanel Grid.Column="1" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="Avatar URL:" Foreground="#E6E6FA" FontWeight="SemiBold" FontSize="16"/>
                    <TextBox Text="{Binding AvatarUrl}" Watermark="Enter URL" Width="320" HorizontalAlignment="Left"/>
                    <TextBlock Text="Your cosmic portrait link" Foreground="#B0E0E6" FontStyle="Italic" FontSize="11"/>
                </StackPanel>
            </Grid>

            <Border CornerRadius="15"
                    Background="#281A5E"
                    Padding="20" Margin="0,15"
                    BorderBrush="#8A2BE2"
                    BorderThickness="1"
                    IsVisible="{Binding !IsLoading}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="#8A2BE2" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel Spacing="15">
                    <StackPanel>
                        <TextBlock Text="Display Name:" Foreground="#E6E6FA" FontWeight="SemiBold" FontSize="16"/>
                        <TextBox Text="{Binding DisplayName}" Watermark="Your galactic identity" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Bio:" Foreground="#E6E6FA" FontWeight="SemiBold" FontSize="16"/>
                        <TextBox Text="{Binding Bio}"
                                Watermark="Share your story"
                                Height="120" TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border CornerRadius="10"
                            Background="#30195B"
                            Padding="15"
                            Margin="0,10">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Cosmic Interests"
                                      Foreground="#FF69B4"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"/>

                            <TextBlock Text="Select your passions"
                                      Foreground="#B0E0E6"
                                      FontStyle="Italic"
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,8"/>

                            <ItemsControl ItemsSource="{Binding AllInterests}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal">
                                            <WrapPanel.Styles>
                                                <Style Selector="Button">
                                                    <Setter Property="Margin" Value="8"/>
                                                </Style>
                                            </WrapPanel.Styles>
                                        </WrapPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.ToggleInterestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Background>
                                                <MultiBinding Converter="{StaticResource InterestSelectedConverter}">
                                                    <Binding Path="."/>
                                                    <Binding Path="DataContext.SelectedInterests" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                </MultiBinding>
                                            </Button.Background>
                                            <TextBlock Text="{Binding InterestName}"
                                                      Padding="10,5"
                                                      Foreground="White"
                                                      FontSize="13"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center" Margin="0,15,0,30"
                        IsVisible="{Binding !IsLoading}">
                <Button Command="{Binding CancelCommand}"
                       Width="150"
                       Height="40"
                       Background="#551A8B"
                       IsEnabled="{Binding !IsLoading}">
                    <TextBlock Text="Cancel"
                              Foreground="White"
                              FontSize="15"
                              FontWeight="SemiBold"               
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Button>

                <Button Command="{Binding SaveProfileCommand}"
                       Width="150"
                       Height="40"
                       IsEnabled="{Binding !IsLoading}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#8A2BE2" Offset="0"/>
                            <GradientStop Color="#9400D3" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock Text="{Binding IsEditMode, Converter={x:Static conv:BoolConverters.ToString}, ConverterParameter='Update|Save'}"
                              Foreground="White"
                              FontSize="15"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Button>
            </StackPanel>

            <TextBlock Text="Â© 2025 IDS"
                       Foreground="#A9A9A9"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,10"/>
        </StackPanel>
    </Border>

</UserControl>