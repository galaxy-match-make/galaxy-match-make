<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:GalaxyMatchGUI"
        x:Class="GalaxyMatchGUI.SwipeView"
        Title="AlienMatch - Find Your Cosmic Connection"
        x:DataType="vm:SwipeViewModel"
		xmlns:vm="using:GalaxyMatchGUI.ViewModels"
        Width="450" Height="700"
        Background="#0D0221"
		DataContext="{Binding RelativeSource={RelativeSource Self}}">

	<Window.Resources>
		<local:AttributeIconConverter x:Key="AttributeIconConverter"/>
		<local:AttributeNameConverter x:Key="AttributeNameConverter"/>
	</Window.Resources>

	<Window.Styles>
		<Style Selector="Button.actionButton">
			<Setter Property="Width" Value="60"/>
			<Setter Property="Height" Value="60"/>
			<Setter Property="CornerRadius" Value="30"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Transitions">
				<Transitions>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>
		<Style Selector="Button.actionButton:pointerover">
			<Setter Property="RenderTransform" Value="scale(1.1)"/>
		</Style>
	</Window.Styles>

	<Grid>
		<!-- Space background with stars -->
		<Canvas>
			<Ellipse Canvas.Left="40" Canvas.Top="100" Width="4" Height="4" Fill="#FFFFFF" Opacity="0.8"/>
			<Ellipse Canvas.Left="120" Canvas.Top="80" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.6"/>
			<Ellipse Canvas.Left="200" Canvas.Top="150" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.7"/>
			<Ellipse Canvas.Left="300" Canvas.Top="200" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.5"/>
			<Ellipse Canvas.Left="50" Canvas.Top="300" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.6"/>
			<Ellipse Canvas.Left="250" Canvas.Top="350" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.8"/>
			<Ellipse Canvas.Left="350" Canvas.Top="120" Width="4" Height="4" Fill="#FFFFFF" Opacity="0.7"/>
			<Ellipse Canvas.Left="150" Canvas.Top="400" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.5"/>
			<Ellipse Canvas.Left="320" Canvas.Top="450" Width="3" Height="3" Fill="#FFFFFF" Opacity="0.7"/>
			<Ellipse Canvas.Left="80" Canvas.Top="500" Width="2" Height="2" Fill="#FFFFFF" Opacity="0.6"/>

			<!-- Small planet in background -->
			<Ellipse Canvas.Left="30" Canvas.Top="50" Width="40" Height="40" Opacity="0.6">
				<Ellipse.Fill>
					<RadialGradientBrush>
						<GradientStop Color="#FF4D6E" Offset="0"/>
						<GradientStop Color="#B92B5C" Offset="1"/>
					</RadialGradientBrush>
				</Ellipse.Fill>
			</Ellipse>
		</Canvas>

		<!-- Header with app name and navigation -->
		<Grid VerticalAlignment="Top" Height="60">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Alien" FontSize="22" FontWeight="Bold" Foreground="#00FF9F"/>
				<TextBlock Text="Match" FontSize="22" FontWeight="Bold" Foreground="#9D4EDD"/>
			</StackPanel>
			<Button HorizontalAlignment="Left" Margin="15,0,0,0"
                    Width="40" Height="40" CornerRadius="20" Background="#2A0F5B"
                    Command="{Binding ViewProfileCommand}">
				<TextBlock Text="ðŸ‘¤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Button>
			<Button HorizontalAlignment="Right" Margin="0,0,15,0"
                    Width="40" Height="40" CornerRadius="20" Background="#2A0F5B"
                    Command="{Binding ViewMessagesCommand}">
				<TextBlock Text="ðŸ’¬" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Button>
		</Grid>

		<!-- Swipeable Card -->
		<Border Width="380" Height="520" CornerRadius="15" Margin="0,30,0,0"
                Background="#1E0B45" ClipToBounds="True">
			<Border.Effect>
				<DropShadowEffect BlurRadius="20" Color="#5D12D2" Opacity="0.7"/>
			</Border.Effect>

			<Grid>
				<!-- Profile Image with gradient overlay -->
				<Border Height="350" VerticalAlignment="Top" ClipToBounds="True">
					<Border.Background>
						<ImageBrush Source="{Binding CurrentProfile.AvatarUrl}" Stretch="UniformToFill"/>
					</Border.Background>
					<!-- Gradient overlay for better text visibility -->
					<Border VerticalAlignment="Bottom" Height="150">
						<Border.Background>
							<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
								<GradientStop Color="#001E0B45" Offset="0"/>
								<GradientStop Color="#FF1E0B45" Offset="1"/>
							</LinearGradientBrush>
						</Border.Background>
					</Border>
				</Border>

				<!-- Profile Information -->
				<Border Padding="20" VerticalAlignment="Bottom">
					<StackPanel VerticalAlignment="Bottom">
						<StackPanel Orientation="Horizontal" Spacing="10">
							<TextBlock Text="{Binding CurrentProfile.DisplayName}" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF"/>
							<TextBlock Text="{Binding CurrentProfile.GalacticDateOfBirth}" FontSize="28" FontWeight="Bold" Foreground="#CCCCFF"/>
							<Border Background="#7B2CBF" CornerRadius="10" Padding="8,2" VerticalAlignment="Center">
								<TextBlock Text="{Binding CurrentProfile.Species.SpeciesName}" FontSize="14" Foreground="White"/>
							</Border>
						</StackPanel>

						<TextBlock FontSize="16" Foreground="#9F9FFF" Margin="0,5,0,10">
							<Run Text="Planet: "/>
							<Run Text="{Binding CurrentProfile.Planet.PlanetName}"/>
							<Run Text=" â€¢ 42 light-years away"/>
						</TextBlock>

						<!-- Physical Attributes -->
						<ItemsControl ItemsSource="{Binding CurrentProfile.User.Attributes}">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel Margin="0,5,0,10"/>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Border Background="#2A0F5B" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
										<StackPanel Orientation="Horizontal" Spacing="5">
											<TextBlock Text="{Binding AttributeId, Converter={StaticResource AttributeIconConverter}}" FontSize="14"/>
											<TextBlock Text="{Binding AttributeId, Converter={StaticResource AttributeNameConverter}}" Foreground="#CCCCFF" FontSize="14"/>
										</StackPanel>
									</Border>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>

						<!-- Bio -->
						<TextBlock Text="{Binding CurrentProfile.Bio}"
                                   Foreground="#CCCCFF" FontSize="15" TextWrapping="Wrap"/>

						<!-- Interests -->
						<TextBlock Text="Interests:" Foreground="#00FF9F" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,5"/>
						<ItemsControl ItemsSource="{Binding CurrentProfile.User.Interests}">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel/>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Border Background="#2A0F5B" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
										<TextBlock Text="{Binding Interest.InterestName}" Foreground="#CCCCFF" FontSize="14"/>
									</Border>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</StackPanel>
				</Border>
			</Grid>
		</Border>

		<!-- Action Buttons -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" Spacing="20">
			<Button Classes="actionButton" Background="#FF4757" Command="{Binding SwipeLeftCommand}">
				<TextBlock Text="âœ—" FontSize="28" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Button>

			<Button Classes="actionButton" Background="#4A10B8" Command="{Binding SwipeSuperCommand}">
				<TextBlock Text="ðŸ’«" FontSize="22" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Button>

			<Button Classes="actionButton" Background="#00FF9F" Command="{Binding SwipeRightCommand}">
				<TextBlock Text="â™¥" FontSize="28" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Button>
		</StackPanel>
	</Grid>
</Window>